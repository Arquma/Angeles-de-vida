{% endblock %}  
<center>
    <div class="row">
        <br>





        <br/> <a class="btn btn-default btn-lg" href="{{path('AsSubirArchivo')}}" >
       <i class="glyphicon glyphicon-circle-arrow-up"></i> ¡Subir Archivo!</a>
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-content">
                    {% if message is defined%}
                        <div class="box-content alerts">
                            <div class="alert alert-danger">

                                <strong>¡{{message}}!</strong>
                            </div>
                        </div>
                    {% endif %}
                    <table class="table table-hover record_properties bootstrap-datatable datatable responsive table-bordered">

                        <tbody>
                            {% if message is not defined%}
                                <tr class="bg-primary">

                                    <th class="center-text">Nombre</th>
                                    <th class="center-text">Descripción</th>     
                                    <th class="center-text">Acciones</th>
                                </tr>

                            {% endif %}
                            {% for asociacion in archivos %}
                                <tr class="center-text">
                                    <td>{{asociacion.nombre}}</td>
                                    <td>{{asociacion.descripcion}}</td>

                                    <td>

                                        


                                        <a class="btn btn-info btn-xs" href="{{path('AsDescargarCom')}}?id={{asociacion.idDoc}}">
                                            <i class="glyphicon glyphicon-download-alt"></i>
                                            Descargar</a>


                                        <a class="btn btn-danger btn-xs" href="{{path('AsEliminarCom')}}?id={{asociacion.idDoc}}">
                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                            Eliminar</a>

                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    </center>
