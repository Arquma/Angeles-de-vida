<center>
    <br><br/>
      <h3><li class="glyphicon glyphicon-edit"></li><font color="#1C1C1C"> Lista de Horarios<font/></h3>
    <div class="row">
        <div class="box col-md-12">
           
            <div class="box-inner">
                <div class="box-content">
                     {% if message is defined%}
                        <div class="box-content alerts">
                            <div class="alert alert-success">
                             
                                <strong>¡{{message}}!</strong>
                            </div>
                        </div>
                    {% endif %}
                    
                    <table class="table table-hover record_properties bootstrap-datatable datatable responsive table-bordered">
                        {% if message is not defined%}
                       
                             
                            <tr class="bg-primary">
                                <th class="center-text">Nombre</th>
                                <th class="center-text">Descripción</th>
                                <th class="center-">Acción</th>
                            </tr>
                        
                         {% endif %}
                        <tbody>
                            {% for horario in horarios %}
                                <tr>
                                    <td>{{horario.nombre}}</td>
                                    <td class="center">{{horario.descripcion}}</td>
                                    <td class="center">
                                        <a class="btn btn-success" href="{{path('dDescargarHorario')}}?id={{horario.id}}">
                                            <i class="glyphicon glyphicon-download-alt"></i>
                                            Ver
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                            
                            
                </div>
            </div>
        </div>
    </div><!--/row-->
