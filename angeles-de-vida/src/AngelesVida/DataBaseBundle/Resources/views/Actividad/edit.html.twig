{% extends "baseCrud.html.twig" %}
{% block titleCrud %}
    <li class="nav-header">Actividades</li>
    {% endblock %}
    {% block bodyCrud %}

    <script>
        $(function () {
            $("#edit_form").validate({
                rules: {
                    'nombre': 'required',
                    'descripcion': 'required',
                    'lugar': 'required'
                },
                messages: {
                    'nombre': 'Este campo es requerido.'
                },
                debug: true,
                submitHandler: function (form) {
                    alert('Datos de actividad ingresados correctamente.');
                }
            });
        });

    </script>

    <center>
        <h2>Crear Actividad</h2>


        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-content">
                        {% if message is defined%}
                            <div class="alert alert-info"><font color="088A08">{{message}}</font></div>
                            {% endif %}

                        {{form_start(edit_form)}}
                        {{form_errors(edit_form)}}

                        {{ form_label(edit_form.nombre) }}
                        {{ form_errors(edit_form.nombre) }}
                        {{ form_widget(edit_form.nombre) }}
                        <br>
                        {{ form_label(edit_form.fecha) }}
                        {{ form_errors(edit_form.fecha) }}
                        {{ form_widget(edit_form.fecha) }}
                        <br>
                        {{ form_label(edit_form.horaInicio) }}
                        {{ form_errors(edit_form.horaInicio) }}
                        {{ form_widget(edit_form.horaInicio) }}
                        <br>
                        {{ form_label(edit_form.horaFin) }}
                        {{ form_errors(edit_form.horaFin) }}
                        {{ form_widget(edit_form.horaFin) }}
                        <br>
                        {{ form_label(edit_form.descripcion) }}
                        {{ form_errors(edit_form.descripcion) }}
                        {{ form_widget(edit_form.descripcion) }}
                        <br>
                        {{ form_label(edit_form.lugar) }}
                        {{ form_errors(edit_form.lugar) }}
                        {{ form_widget(edit_form.lugar) }}
                        <br>

                        {{ form_rest(edit_form) }}
                        <br>

                        {{form_end(edit_form)}}

                        {{ form(delete_form) }}

                        <br>
                        <a class="btn btn-primary" href="{{ path('actividad') }}">
                            Volver a actividades
                        </a>
                        </center>
                    {% endblock %}