{% extends "baseCrud.html.twig" %}
{% block titleCrud %}
    <li class="nav-header">Actividades</li>
    {% endblock %}
    {% block bodyCrud %}
    <center>

        <h2>Actividades</h2>

        <div class="row">
            <div class="box col-md-12">
                <div class="box-inner">
                    <div class="box-content">
                        {% if message is defined%}
                            <div class="alert alert-info"><font color="088A08">{{message}}</font></div>
                            {% endif %}

                        <table class="rwd-table">
                            <tbody>
                                <tr class="bg-primary">
                                    <th class="center-text">Id</th>
                                    <th class="center-text">Nombre</th>
                                    <th class="center-text">Fecha</th>
                                    <th class="center-text">Hora de inicio</th>
                                    <th class="center-text">Hora de fin</th>
                                    <th class="center-text">Descripción</th>
                                    <th class="center-text">Lugar</th>
                                    <th class="center-text">Acciones</th>
                                </tr>

                                {% for entity in entities %}
                                    <tr class="center-text">
                                        <td data-th="Id">{{ entity.id }}</td>
                                        <td data-th="Nombre">{{ entity.nombre }}</td>
                                        <td data-th="Fecha">{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
                                        <td data-th="Hora de inicio">{% if entity.horaInicio %}{{ entity.horaInicio|date('H:i') }}{% endif %}</td>
                                        <td data-th="Hora de fin">{% if entity.horaFin %}{{ entity.horaFin|date('H:i') }}{% endif %}</td>
                                        <td data-th="Descripción">{{ entity.descripcion }}</td>
                                        <td data-th="Lugar">{{ entity.lugar }}</td>
                                        <td data-th="Acciones">
                                            <ul>
                                                <a class="btn btn-warning" href="{{ path('actividad_edit', { 'id': entity.id }) }}">Editar/Eliminar</a>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <a class="btn btn-primary" href="{{ path('actividad_new') }}">
                            Crear una nueva actividad
                        </a>
                        </center>
                    {% endblock %}    